def arnav(n1):
    for i in range(0,n1+1,2):
        if i%4==0:
            print(i,end=',')
        else:
            print(-i,end=',')



def okay():
    w=int(input("Enter n"))
    k=10
    for i in range(w):
        print(k,end=' ')
        k*=10

def okay1():
    w=int(input("Enter n"))
    for i in range(1,w+1):
        print(10**i,end=' ')

